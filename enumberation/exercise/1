#include <iostream>
#include <string>


enum Days {

  Monday = 1, 
  Tuesday = 2 , 
  Wednesday = 3 , 
  Thursday = 4 , 
  Friday = 5 ,
  Saturday = 6 , 
  Sunday = 7 
} ; 

int main () { 
int enum Days input ; 

  std :: cout << "Please enter from 1-7 to see the day: " << std :: endl; std :: cin >> int ; 


  switch (int) {
    case 1 : 
      std :: cout << "Today is Monday!"; 
      break; 
    case 2 : 
      std :: cout << "Today is Tuesday!"; 
